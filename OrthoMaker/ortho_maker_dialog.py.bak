        self.setupUi(self)
        self.inShapeA.setFilters(QgsMapLayerProxyModel.VectorLayer)
        self.inShapeA.layerChanged.connect(self.inShapeAChanged)

    def inShapeAChanged(self):
        if not self.isVisible():
            return
        layer = self.inShapeA.currentLayer()
        self.inField1.setLayer(layer)
